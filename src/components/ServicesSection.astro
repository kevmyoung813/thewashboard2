---
import { Icon } from "astro-icon/components";
import { serviceOfferings } from "@/data/services";

const iconNameMap: Record<string, string> = {
  WashingMachine: "lucide:washing-machine",
  HandHelping: "lucide:hand-helping",
  Bed: "lucide:bed",
};
---

<section id="services" class="py-20 md:py-28 bg-background">
  <div class="container mx-auto px-4 md:px-8">
    <div class="text-center mb-14">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-4">Our Services</h2>
      <p class="text-muted-foreground max-w-xl mx-auto">
        Everything you need for a great laundry experience, all under one roof.
      </p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 max-w-5xl mx-auto">
      {serviceOfferings.map((service) => (
        <div class="bg-card rounded-2xl p-8 shadow-sm border border-border hover:shadow-md transition-shadow text-center">
          <div class="inline-flex items-center justify-center w-14 h-14 rounded-xl bg-accent mb-6">
            <Icon name={iconNameMap[service.icon]} width={28} height={28} class="text-primary" />
          </div>
          <h3 class="text-lg font-semibold text-primary mb-3">{service.title}</h3>
          <p class="text-foreground/70 leading-relaxed">{service.description}</p>
        </div>
      ))}
    </div>

    <div class="text-center mt-12">
      <a
        href="/services"
        class="inline-flex items-center justify-center rounded-full bg-primary px-8 py-3 text-sm font-semibold text-primary-foreground hover:opacity-90 transition-opacity"
      >
        Explore Our Services
      </a>
    </div>
  </div>
</section>
