---
import { Icon } from "astro-icon/components";
import { howItWorksSteps } from "@/data/howto";

const iconNameMap: Record<string, string> = {
  CreditCard: "lucide:credit-card",
  MonitorSmartphone: "lucide:monitor-smartphone",
  Fingerprint: "lucide:fingerprint",
  Armchair: "lucide:armchair",
};
---

<section id="how-it-works" class="py-20 md:py-28 bg-accent">
  <div class="container mx-auto px-4 md:px-8 text-center">
    <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-4">
      Simple. Straightforward. Comfortable.
    </h2>
    <p class="text-muted-foreground mb-14 max-w-xl mx-auto">
      A few quick steps are all it takes to get started.
    </p>

    <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 max-w-4xl mx-auto mb-12">
      {howItWorksSteps.map((step, index) => (
        <div class="flex flex-col items-center gap-4">
          <div class="relative">
            <div class="w-16 h-16 rounded-full bg-primary flex items-center justify-center">
              <Icon name={iconNameMap[step.icon]} width={28} height={28} class="text-primary-foreground" />
            </div>
            <span class="absolute -top-1 -right-1 w-6 h-6 rounded-full bg-primary-foreground text-primary text-xs font-bold flex items-center justify-center border-2 border-primary">
              {index + 1}
            </span>
          </div>
          <p class="text-sm font-medium text-foreground/80 leading-snug">{step.label}</p>
        </div>
      ))}
    </div>

    <a
      href="/how-to"
      class="inline-flex items-center justify-center rounded-full border-2 border-primary px-8 py-3 text-sm font-semibold text-primary hover:bg-primary hover:text-primary-foreground transition-colors"
    >
      See How It Works
    </a>
  </div>
</section>
