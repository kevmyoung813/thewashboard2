---
import { blogPosts } from "@/data/blogPosts";
import BlogCard from "@/components/BlogCard.astro";

const recentPosts = blogPosts.slice(0, 3);
---

<section class="py-20 md:py-28 bg-background">
  <div class="container mx-auto px-4 md:px-8">
    <div class="text-center mb-14">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-4">
        From Our Blog
      </h2>
      <p class="text-muted-foreground max-w-xl mx-auto">
        Helpful laundry tips and updates for the Murray community.
      </p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 max-w-5xl mx-auto">
      {recentPosts.map((post) => (
        <BlogCard post={post} />
      ))}
    </div>

    <div class="text-center mt-12">
      <a
        href="/blog"
        class="inline-flex items-center justify-center rounded-full border-2 border-primary px-8 py-3 text-sm font-semibold text-primary hover:bg-primary hover:text-primary-foreground transition-colors"
      >
        View All Articles
      </a>
    </div>
  </div>
</section>
