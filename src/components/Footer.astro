---
import { Icon } from "astro-icon/components";
import logoStacked from "@/assets/logo-stacked.png";
import { footerLinks } from "@/data/navigation";
import { contactInfo } from "@/data/contact";
---

<footer class="py-12 md:py-16 bg-primary text-primary-foreground">
  <div class="container mx-auto px-4 md:px-8">
    <div class="grid md:grid-cols-3 gap-10 md:gap-8 items-start">
      <!-- Logo -->
      <div class="flex flex-col items-center md:items-start">
        <a href="/">
          <img
            src={logoStacked.src}
            alt="The Washboard"
            class="h-28 md:h-32 w-auto brightness-0 invert"
          />
        </a>
      </div>

      <!-- Navigation -->
      <div class="flex flex-col items-center md:items-start gap-3">
        <h3 class="text-sm font-semibold uppercase tracking-wider mb-1 text-primary-foreground/70">
          Quick Links
        </h3>
        {footerLinks.map((link) => (
          <a
            href={link.href}
            class="text-sm text-primary-foreground/80 hover:text-primary-foreground transition-colors"
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- Contact -->
      <div class="flex flex-col items-center md:items-start gap-3">
        <h3 class="text-sm font-semibold uppercase tracking-wider mb-1 text-primary-foreground/70">
          Contact Us
        </h3>
        <a
          href={contactInfo.phoneHref}
          class="inline-flex items-center gap-2 text-sm text-primary-foreground/80 hover:text-primary-foreground transition-colors"
        >
          <Icon name="lucide:phone" width={14} height={14} />
          {contactInfo.phoneFormatted}
        </a>
        <a
          href={contactInfo.googleMapsUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-sm text-primary-foreground/80 hover:text-primary-foreground transition-colors"
        >
          <Icon name="lucide:map-pin" width={14} height={14} />
          {contactInfo.address.street}, {contactInfo.address.city}, {contactInfo.address.state}
        </a>
        <a
          href={contactInfo.social.facebook}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-sm text-primary-foreground/80 hover:text-primary-foreground transition-colors"
        >
          <Icon name="lucide:facebook" width={14} height={14} />
          Facebook
        </a>
      </div>
    </div>

    <div class="mt-10 pt-6 border-t border-primary-foreground/20 text-center">
      <p class="text-xs text-primary-foreground/60">
        &copy; {new Date().getFullYear()} The Washboard â€” Murray's Friendly Neighborhood Laundromat
      </p>
    </div>
  </div>
</footer>
