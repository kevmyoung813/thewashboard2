---
import { Icon } from "astro-icon/components";
import { contactInfo } from "@/data/contact";
---

<section class="py-16 md:py-20 bg-secondary">
  <div class="container mx-auto px-4 md:px-8">
    <div class="grid md:grid-cols-2 gap-8 md:gap-12 items-stretch">
      <!-- Map -->
      <div class="rounded-2xl overflow-hidden shadow-md min-h-[350px]">
        <iframe
          title="The Washboard Location"
          src={contactInfo.googleMapsEmbedUrl}
          width="100%"
          height="100%"
          style="border: 0; min-height: 350px"
          allowfullscreen
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        ></iframe>
      </div>

      <!-- Contact Info -->
      <div class="flex flex-col justify-center space-y-8">
        <h2 class="text-2xl md:text-3xl font-bold text-primary">
          Visit The Washboard
        </h2>

        <div class="space-y-6">
          <div class="flex gap-4 items-start">
            <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center shrink-0">
              <Icon name="lucide:map-pin" width={20} height={20} class="text-primary" />
            </div>
            <div>
              <p class="font-semibold text-foreground mb-1">Address</p>
              <p class="text-muted-foreground">{contactInfo.address.street}</p>
              <p class="text-muted-foreground">
                {contactInfo.address.city}, {contactInfo.address.state} {contactInfo.address.zip}
              </p>
              <a
                href={contactInfo.googleMapsUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="text-primary font-medium text-sm hover:underline mt-1 inline-block"
              >
                Get Directions &rarr;
              </a>
            </div>
          </div>

          <div class="flex gap-4 items-start">
            <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center shrink-0">
              <Icon name="lucide:phone" width={20} height={20} class="text-primary" />
            </div>
            <div>
              <p class="font-semibold text-foreground mb-1">Phone</p>
              <a
                href={contactInfo.phoneHref}
                class="text-muted-foreground hover:text-primary transition-colors"
              >
                {contactInfo.phoneFormatted}
              </a>
            </div>
          </div>

          <div class="flex gap-4 items-start">
            <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center shrink-0">
              <Icon name="lucide:clock" width={20} height={20} class="text-primary" />
            </div>
            <div>
              <p class="font-semibold text-foreground mb-1">Hours</p>
              <p class="text-muted-foreground">{contactInfo.hours}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
