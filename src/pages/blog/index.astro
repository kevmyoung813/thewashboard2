---
import BaseLayout from "@/layouts/BaseLayout.astro";
import CtaBand from "@/components/CtaBand.astro";
import BlogCard from "@/components/BlogCard.astro";
import { blogPosts } from "@/data/blogPosts";
---

<BaseLayout
  title="Laundry Tips & Updates | The Washboard in Murray, KY"
  description="Helpful laundry guidance for Murray State students and Calloway County families. Local tips from your neighborhood laundromat."
>
  <!-- Hero -->
  <section class="py-16 md:py-20 bg-background">
    <div class="container mx-auto px-4 md:px-8 text-center">
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">
        Laundry Tips &amp; Updates from The Washboard
      </h1>
      <p class="text-muted-foreground max-w-2xl mx-auto text-base md:text-lg">
        Helpful laundry guidance, service updates, and local information for customers in Murray, KY and Calloway County.
      </p>
    </div>
  </section>

  <!-- Blog Grid -->
  <section class="pb-20 md:pb-28 bg-background">
    <div class="container mx-auto px-4 md:px-8">
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 max-w-5xl mx-auto">
        {blogPosts.map((post) => (
          <BlogCard post={post} />
        ))}
      </div>
    </div>
  </section>

  <CtaBand />
</BaseLayout>
